# Example terraform.tfvars file
# Copy this to terraform.tfvars and customize

project_id   = "your-project-id"
region       = "us-central1"
cluster_name = "semaphore-prod-hardened"
network_name = "semaphore-vpc"

# Private cluster settings
master_ipv4_cidr_block = "172.16.0.0/28"

# IMPORTANT: Restrict SSH access to bastion to your IP only!
# Get your IP: curl ifconfig.me
bastion_allowed_cidrs = [
  "1.2.3.4/32"  # Replace with your public IP
]

# Optional: Allow direct kubectl access (not recommended for production)
# dev_access_cidrs = [
#   {
#     cidr_block   = "1.2.3.4/32"
#     display_name = "My office"
#   }
# ]

# Node pool configuration
machine_type   = "e2-standard-4"  # 4 vCPU, 16 GB RAM
node_count     = 1               # Start with 1 node per zone
min_node_count = 1
max_node_count = 3

# Security features
enable_binary_auth        = false  # Enable after Phase 03 (Cosign setup)
enable_secrets_encryption = true   # Encrypt secrets with KMS

# Security posture (BASIC is free, ENTERPRISE requires payment)
security_posture_mode = "BASIC"
vulnerability_mode    = "VULNERABILITY_BASIC"
